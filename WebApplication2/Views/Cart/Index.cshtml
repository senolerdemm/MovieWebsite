@model List<WebApplication2.Models.Movie>

@{
    ViewData["Title"] = "Sepet";
}

<h2>üõí Your Cart</h2>

@if (Model.Count == 0)
{
    <p>@ViewBag.Message</p>
}
else
{
    <ul>
        @foreach (var movie in Model)
        {
            <li>
                <h3>@movie.Title</h3>
                <p>Director: @movie.Director</p>
                <p>Year: @movie.ReleaseYear</p>
                <p>Rating: ‚≠ê @movie.Rating </p>
                <img src="@movie.ImageUrl" alt="@movie.Title" width="200" />
            </li>
        }
    </ul>
}

<br>
<a href="/HomePage" style="background-color: #4CAF50; color: white; padding: 10px 20px; text-align: center; text-decoration: none; display: inline-block; border-radius: 5px;">Return HomePage</a>