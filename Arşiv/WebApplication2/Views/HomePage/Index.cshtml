@model List<WebApplication2.Models.Movie>



<h2>Movie List</h2>
@{
    ViewData["Title"] = "Home Page";
}

<div class="row">
    @foreach (var movie in Model)
    {
        <div class="col-md-4 col-sm-6">
            <div class="movie-card">
                <img src="@movie.ImageUrl" alt="@movie.Title">
                <div class="movie-info">
                    <h3 class="movie-title">@movie.Title</h3>
                    <p>@movie.Director</p>
                    <p>@movie.ReleaseYear</p>
                    <p>@movie.Players</p>
                    <p>Rating: ⭐ @movie.Rating / 5</p>
                    <a href="@Url.Action("MovieInfo", "Movie", new { id = movie.MovieId })" class="btn btn-primary">MovieInfo</a>
                    <a href="@Url.Action("AddToCart", "Movie", new { id = movie.MovieId })" class="btn btn-success">Add to Cart</a>
                    @if (TempData[$"Message_{movie.MovieId}"] != null)
                    {
                        <div class="alert alert-info mt-2">
                            @TempData[$"Message_{movie.MovieId}"]
                        </div>
                    }
                </div>
            </div>
        </div>
    }
</div>
@if(Model.Count == 0)
{
    <p>No movies found.</p>
}



<br>
<div class="action-links">
    <a href="/Cart" class="cart-link">🛒 See Cart</a>
    
</div>